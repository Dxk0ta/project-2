<%- include('../header.ejs', { user }) %>
<!DOCTYPE html>
<html>
<head>
  <title>Edit Comment</title>
</head>
<body>
  <h1>Edit Comment</h1>
  <form action="/comments/<%= comment.id %>?_method=PUT" method="comment">
    <br>
    <label for="content">Content:</label>
    <textarea id="content" name="content"><%= comment.content %></textarea>
    <br>
    <button type="submit">Update Comment</button>
  </form>
  <a href="/comments">Back to Comments</a>
</body>
</html>
